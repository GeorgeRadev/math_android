<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_horizontal"
    android:columnCount="1"
    android:rowCount="2"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:columnCount="6"
        android:rowCount="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_columnWeight="1">

            <Button
                android:id="@+id/modePlus"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_columnWeight="1">

            <Button
                android:id="@+id/modePlusPlus"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:text="++" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_columnWeight="1">

            <Button
                android:id="@+id/modeMinus"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_columnWeight="1">

            <Button
                android:id="@+id/modeMinusMinus"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:text="--" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_columnWeight="1">

            <Button
                android:id="@+id/modeMultiply"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:text="*" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_columnWeight="1">

            <Button
                android:id="@+id/modeDivide"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:text=":" />
        </LinearLayout>

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:columnCount="5"
        android:rowCount="15">

        <TextView
            android:id="@+id/operationText"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center|end"
            android:text="++"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/numberOne"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="end"
            android:text="01"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/numberTwo"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="end"
            android:text="02"
            android:textSize="60sp" />


        <View
            android:id="@+id/resultLine"
            android:layout_height="5dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="5"
            android:layout_gravity="center"
            android:background="@color/purple_500" />


        <TextView
            android:id="@+id/numberResult"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="end"
            android:text="03"
            android:textSize="60sp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/resultClear"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_gravity="center"
            android:backgroundTint="@color/red_300"
            android:text="X" />

        <View
            android:id="@+id/numberLine"
            android:layout_height="30dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="5"
            android:layout_gravity="center"
            android:background="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_gravity="center"
            android:background="@color/purple_200"
            android:text="1"
            android:textSize="22sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_gravity="center"
            android:background="@color/purple_200"
            android:text="2"
            android:textSize="22sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="5"
            android:layout_column="3"
            android:layout_gravity="center"
            android:background="@color/purple_200"
            android:text="3"
            android:textSize="22sp" />

        <View
            android:id="@+id/numberSeparator"
            android:layout_height="10dp"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_columnSpan="5"
            android:layout_gravity="fill"
            android:background="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="7"
            android:layout_column="1"
            android:layout_gravity="center"
            android:background="@color/purple_200"
            android:text="4"
            android:textSize="22sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="7"
            android:layout_column="2"
            android:layout_gravity="center"
            android:background="@color/purple_200"
            android:text="5"
            android:textSize="22sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="7"
            android:layout_column="3"
            android:layout_gravity="center"
            android:background="@color/purple_200"
            android:text="6"
            android:textSize="22sp" />

        <View
            android:id="@+id/numberSeparator2"
            android:layout_height="10dp"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_columnSpan="5"
            android:layout_gravity="fill"
            android:background="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="9"
            android:layout_column="1"
            android:layout_gravity="center"
            android:background="@color/purple_200"
            android:text="7"
            android:textSize="22sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="9"
            android:layout_column="2"
            android:layout_gravity="center"
            android:background="@color/purple_200"
            android:text="8"
            android:textSize="22sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="9"
            android:layout_column="3"
            android:layout_gravity="center"
            android:background="@color/purple_200"
            android:text="9"
            android:textSize="22sp" />


        <View
            android:id="@+id/numberSeparator4"
            android:layout_height="10dp"
            android:layout_row="10"
            android:layout_column="0"
            android:layout_columnSpan="5"
            android:layout_gravity="fill"
            android:background="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number0"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="11"
            android:layout_column="2"
            android:layout_gravity="center"
            android:background="@color/purple_200"
            android:text="0"
            android:textSize="22sp" />

        <View
            android:id="@+id/numberSeparator3"
            android:layout_height="10dp"
            android:layout_row="12"
            android:layout_column="0"
            android:layout_columnSpan="5"
            android:layout_gravity="fill"
            android:background="@color/white" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_row="13"
            android:layout_column="0"
            android:layout_columnWeight="1">

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_row="13"
            android:layout_column="1"
            android:layout_columnWeight="1">

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_row="13"
            android:layout_column="2"
            android:layout_columnWeight="1">

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_row="13"
            android:layout_column="3"
            android:layout_columnWeight="1">

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_row="13"
            android:layout_column="4"
            android:layout_columnWeight="1">

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/white" />
        </LinearLayout>


        <View
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_row="14"
            android:layout_column="0"
            android:layout_columnSpan="5"
            android:layout_gravity="fill"
            android:background="@color/white" />
    </GridLayout>
</GridLayout>